<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
                <gradient
                    android:angle="360"
                    android:startColor="#FD746C"
                    android:endColor="#FF9068"
                    android:type="linear" />

            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/ic_plus_symbol"
        android:top="50px"
        android:right="50px"
        android:bottom="50px"
        android:left="50px" />
</layer-list>